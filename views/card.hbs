<h1>Корзина</h1>

<div id="card">
    {{#if courses.length}}
        <table>
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Количество</th>
                    <th>Действия</th>
                </tr>
            </thead> 
            <tbody class="main_body">
                {{#each courses}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{count}}</td>
                        <td>
                            <button class="btn btm-small card-delete orange" data-csrf="{{@root.csrf}}" data-id="{{id}}">Удалить</button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>     
        </table>

        <p><b>Цена</b> <span class="price">{{price}}</span></p>

        <form action="/orders" method="POST">
            <button class="btn blue" type="submit">Заказать</button>
            <input type="hidden" name="_csrf" value="{{csrf}}">
        </form>
    {{else}}
        <p>Корзина пуста</p>
    {{/if}}
</div>