<h1>Добавить курс</h1>

<form action="/add" method="POST" style="margin-top: 45px;">
        <div class="input-field col s6">
          <input id="title" name="title" type="text" class="validate" required/>
          <label for="title">Название курса</label>
          <span class="helper-text" data-error="Введите имя" data-success="right"></span>
        </div>
        <div class="input-field col s6">
          <input id="price" type="number" name="price" class="validate" required/>
          <label for="price">Стоимость курса</label>
          <span class="helper-text" data-error="Введите цену" data-success="right"></span>
        </div>
        <div class="input-field col s6">
          <input id="img" type="text" name="img" class="validate" required/>
          <label for="img">URL картинки</label>
          <span class="helper-text" data-error="Введите URL картинки" data-success="right"></span>
        </div>

        <button class="btn btn-primary" type="submit">Добавить курс</button>
</form>