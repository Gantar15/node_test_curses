<h3>Профиль {{user.name}}</h3>

<div class="row">
    <div class="col s6">
        {{#if user.avatarUrl}}
            <img class="avatar" src="/{{user.avatarUrl}}" alt="{{user.name}} avatar">
        {{else}}
            <p>Аватара нет</p>
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile" method="POST" enctype="multipart/form-data">
            <p class="profile_email row">Ваш email <strong>{{user.email}}</strong></p>

            <div class="input-field row s6">
                <input id="name" name="name" type="text" class="validate" value="{{user.name}}" required/>
                <label for="name">Ваше имя</label>
                <span class="helper-text" data-error="Введите имя" data-success="right"></span>
            </div>

            <div class="file-field input-field row">
                <div class="btn orange">
                    <span>Avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">

            <button class="change_profile btn btn-primary blue col s6 offset-s3" type="submit">Изменить</button>
        </form>
    </div>
</div>