 <div class="row">
        <div class="col s6 offset-s3">

            {{#if error}}
                <p class="alert">{{error}}</p>
            {{/if}}

            <h1>Забыли пароль</h1>
            <form action="/auth/reset" method="POST" style="margin-top: 45px;">
                    <div class="input-field row s6">
                        <input id="email" name="email" type="email" class="validate" required/>
                        <label for="email">Email</label>
                        <span class="helper-text" data-error="Введите email" data-success="right"></span>
                    </div>

                    <input type="hidden" name="_csrf" value="{{csrf}}">

                    <button class="btn btn-primary" type="submit">Сбросить</button>
            </form>
        </div>
</div>